<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hitsuji.MainPage">

    <Grid BackgroundColor="#a0FFa0" x:Name="g">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.05*" />
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="2" x:Name="num" Text="" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="#000000" />
        <Button Grid.Column="1" Grid.Row="4" x:Name="btn" Text="Start" FontSize="Large" Clicked="OnBtnClicked" TextColor="#000000" />
    </Grid>

</ContentPage>
